<h1>Do the TODOs</h1>

<%if @current_user!=nil%>
<%= form_with :model => @task do |form| %>
  <%= form.text_field "description" %>
  <%= form.submit "Add new task" %>
<%end%>
<%else%>
<table>
  <% for task in @tasks %>
    <tr>
      <td>
        <%= task["description"] %>
      </td>
      <td>
        <%= button_to "Complete", task, :method => "delete" %>
      </td>
    </tr>
  <% end %>
<%end%>
</table>
